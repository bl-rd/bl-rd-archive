<div class="supplementary">
  {% if sections %}
  <nav>
    <ul>
      {% for item in sections %}
      <li>
        <a href="{{item.id}}" class="font:reduced">{{ item.text }}</a>
      </li>
      {% endfor %}
    </ul>
  </nav>
  {% endif %}

  {% if not hideDate or tags %}
  <aside>
    {% if not hideDate %}
    <time class="font:reduced" datetime="{{ page.date  | iso }}">
      {{ page.date | formatDate }}
    </time>
    {% endif %}
    <ul>
      {% for tag in tags %}
      <li class="font:reduced">
        #{{tag}}
      </li>
      {% endfor %}
    </ul>
  </aside>
  {% endif %}

  <div data-button-observer></div>
  {% include "partials/templates/back-to-top.njk" %}
</div>