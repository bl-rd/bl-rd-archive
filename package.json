{
  "name": "bl-rd",
  "private": true,
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run css && eleventy",
    "start": "concurrently \"eleventy --serve --formats=html\" \"npm run css:inline -- --watch\" \"npm run css:main -- --watch\"",
    "css": "npm run css:inline && npm run css:main",
    "css:main": "postcss styles/main.css --dir _site/styles",
    "css:inline": "postcss styles/base.css --dir _includes/partials/css",
    "lint:js": "eslint '**/*.{js,html,njk}' --fix",
    "lint:css": "stylelint **/*.css --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "browserslist": [
    "last 1 version",
    "> 1%"
  ],
  "devDependencies": {
    "@11ty/eleventy": "^0.9.0",
    "concurrently": "^4.1.2",
    "cssnano": "^4.1.10",
    "eslint": "^6.6.0",
    "eslint-plugin-html": "^6.0.0",
    "husky": ">=1",
    "lint-staged": ">=8",
    "luxon": "^1.19.3",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:js",
      "git add"
    ],
    "*.css": [
        "npm run lint:css",
        "git add"
      ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
