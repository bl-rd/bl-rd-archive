{
  "name": "bl-rd",
  "version": "1.2.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run build:css -- --watch\" \"npm run serve\"",
    "serve": "cobalt serve --drafts",
    "build": "cobalt clean && npm run build:css && cobalt build",
    "build:css": "postcss assets/css/main.css -o _includes/styles/main.css",
    "lint:js": "eslint '**/*.{js,html}' --fix",
    "lint:css": "stylelint **/*.css --fix",
    "deploy": "netlify deploy -d _site",
    "deploy:prod": "npm run deploy -- --prod"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-plugin-html": "^6.1.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "postcss-cli": "^7.1.2",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^19.0.0"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:js",
      "git add"
    ],
    "*.css": [
      "npm run lint:css",
      "git add"
    ]
  },
  "browserslist": [
    "last 1 version",
    "> 1%"
  ]
}
